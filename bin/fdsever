#!/usr/bin/env node
var server = require("../server/server.js");
var commserver = require("../server/start.js");
var path = require('path');
var program = require('commander');
var pkg = require('../package.json');
process.chdir(process.cwd().replace(/\\bin/g, ''));
program.version(pkg.version);
// program.option('-c, --config <path>', 'set the config file');


program.command("open").description("local server open");
program.command("start").description("open local development environment").action(function(){
	commserver.start();
});
program.command("stop").description("exit local development environment").action(function(){
	commserver.stop();
});
program.parse(process.argv);